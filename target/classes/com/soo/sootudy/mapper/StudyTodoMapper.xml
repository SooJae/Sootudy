  <insert id="insert">
    INSERT INTO study_todo
            ( todo
            , writer
            , sno)
    VALUES  (#{todo}
            , #{writer}
            , #{sno})
  </insert>
  
  <delete id="delete">
    DELETE FROM study_todo
    WHERE tdno = #{tdno}
  </delete>
  
  
