  <select id="getList" resultType="com.soo.sootudy.domain.StudyTodoVO">
	  SELECT
	  	  tdno,
	  	  todo,
	      leader,
	      reg_dt,
	      exp_dt,
	      achive,
	      sno
	  FROM study_todo
	  WHERE sno = #{sno}
  </select>
  
  
  <insert id="insert">
    INSERT INTO study_todo
            ( todo
            , leader
            , sno
            , exp_dt)
    VALUES  (#{todo}
            , #{leader}
            , #{sno}
            , #{exp_dt})
  </insert>
  
  <delete id="delete">
    DELETE FROM study_todo
    WHERE tdno = #{tdno}
  </delete>
  
  <update id="check">
    UPDATE study_todo
    SET achive = #{achive}
    WHERE
        tdno = #{tdno}
    
  </update>
