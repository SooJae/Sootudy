<mapper namespace="com.soo.sootudy.mapper.ReplyMapper">

	<select id="list" resultType="com.soo.sootudy.domain.ReplyVO">
		SELECT *
			FROM board_reply
	</select>
	<select id="read" resultType="com.soo.sootudy.domain.ReplyVO">
		SELECT * 
			FROM board_reply
			WHERE RNO = #{rno}
	</select>
	
	<insert id="insert">
		INSERT INTO board_reply
				( BNO
				, REPLY
				, REPLYER)
			VALUES( #{bno}
				,	#{reply}
				, 	#{replyer})
	</insert>
	
	<delete id="delete">
		DELETE FROM board_reply
		WHERE RNO = #{rno}
	</delete>
	
	<update id="update">
		UPDATE board_reply 
		SET REPLY = #{reply}
		WHERE RNO = #{rno}
	</update>
