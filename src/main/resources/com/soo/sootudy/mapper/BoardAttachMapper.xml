<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soo.sootudy.mapper.BoardAttachMapper">

 	<insert id="insert">
		INSERT INTO tbl_attach (uuid,uploadpath, filename, filetype, bno)
		VALUES (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno})
	</insert> 
	
<!-- 	
	<insert id="insert">
		insert into tbl_attach (uuid,uploadpath, filename, filetype)
		values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType})
	</insert>
	 -->
	<delete id="delete">
	DELETE FROM tbl_attach WHERE uuid = #{uuid}
	</delete>
	
	<delete id="deleteAll">
		DELETE FROM tbl_attach WHERE bno=#{bno}
	</delete>

	<select id="findByBno" resultType="com.soo.sootudy.domain.BoardAttachVO">
	SELECT * FROM tbl_attach WHERE bno = #{bno}
	</select>
	
	<select id="getOldFiles" resultType="com.soo.sootudy.domain.BoardAttachVO">
		SELECT * FROM tbl_attach WHERE uploadpath = to_char(sysdate -1,'yyyy\mm\dd')
	</select>
	
</mapper>
