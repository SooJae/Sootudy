<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soo.sootudy.mapper.MemberMapper">


  <resultMap type="com.soo.sootudy.domain.MemberVO" id="memberMap">
    <id property="userid" column="userid"/>
    <result property="userid" column="userid"/>
    <result property="userpw" column="userpw"/>
    <result property="userName" column="username"/>
    <result property="dt" column="dt"/>
    <result property="udt_dt" column="udt_dt"/>
    <collection property="authList" resultMap="authMap">
    </collection> 
  </resultMap>
  
  <resultMap type="com.soo.sootudy.domain.AuthVO" id="authMap">
    <result property="userid" column="userid"/>
    <result property="auth" column="auth"/>
  </resultMap>
  
  <select id="read" resultMap="memberMap">
	SELECT 
	  mem.userid,  userpw, username, enabled, dt, udt_dt, auth
	FROM 
	  tbl_member mem LEFT OUTER JOIN tbl_member_auth auth on mem.userid = auth.userid 
	WHERE mem.userid = #{userid} 
  </select>

  <select id="get" resultType="com.soo.sootudy.domain.MemberVO">
  SELECT * FROM member
    <where>
      <if test="checkArg == 'id'.toString()">
       ID = #{val}
      </if>
      <if test="checkArg == 'nm'.toString()">
       NM = #{val}
      </if>
      <if test="checkArg == 'email'.toString()">
       EMAIL = #{val}
      </if>
    </where>
  </select>
  
  <insert id="insert">
  INSERT INTO member
       ( ID
       , PW
       , NM
       , EMAIL) 
    VALUES(#{id}
       ,   #{pw}
       ,   #{nickName}
       ,   #{email})
  </insert>
  
  
</mapper>